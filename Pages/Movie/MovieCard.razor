@using Yamine.Shared.TheMovie

<RadzenCard Class="rz-my-10 rz-mx-5" Style="max-width : 230px; text-align:center; border-radius: 5% 5% 0 0; padding:0px">
    <RadzenImage Path="@Movie?.PosterPath" Style="width: 100%; height: 300px; border-radius: 5% 5% 0 0; align-content:center" />
    <RadzenCard class="rz-shadow-0 rz-border-radius-0">
        <RadzenText TextStyle="TextStyle.Body1"><b>@Movie?.Title</b></RadzenText>
        @* <RadzenText TextStyle="TextStyle.Overline" class="rz-color-on-primary-light"><strong>@Movie?.Original_Title</strong></RadzenText> *@
        <RadzenText TextStyle="TextStyle.Body2"><b>@(Movie?.release_date)</b></RadzenText>
        <RadzenText TextStyle="TextStyle.Overline"><b>@(Movie?.Popularity)</b></RadzenText>
        @* <RadzenText TextStyle="TextStyle.Overline"><b>@(Movie?.Vote_Average)</b></RadzenText> *@
        @* <RadzenText TextStyle="TextStyle.Overline" class="rz-color-on-primary-light"><b>@(Movie?.Vote_Count)</b></RadzenText> *@
    </RadzenCard>
</RadzenCard>


@code {
    [Parameter]
    public MovieInfo Movie { get; set; }
}